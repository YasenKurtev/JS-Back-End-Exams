<main>
    <form class="search" action="/real-estate/search" method="POST">
        <input type="search" name="searchInput" placeholder="Search here...">
        <button type="submit">Search</button>
    </form>
    <section id="find-section">
        <!-- If there are any matching matches from the search, show each of them -->
        {{#if searchResult}}
        {{#each searchResult}}
        {{> search-offer-card}}
        {{/each}}
        {{else}}
        <!-- If there are no search matches, show: -->
        <div class="no-data-listing">
            <p class="no-offer">No match was found for the submitted type...</p>
        </div>
        {{/if}}
    </section>
</main>